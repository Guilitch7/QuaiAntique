<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Le Quai Antique{% endblock %}</title>
        
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
            <link rel="icon" type="image/jpg" href="quaiAntique_logo_small.jpg"/>
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">          
            <link rel="stylesheet" href="{{ asset('styles/style.css') }}">
        {% endblock %}


    </head>
    <body>
        <div class="justify-content-center pre-nav">
          <div class="row navbar navbar-expand-lg">
            <div class="col">
                <a href="tel:+3321110700">03-21-11-07-00</a>
                <address>3, rue de l'Abbaye, Chambéry</address>
            </div>
            <div class="col">
            <button type="button" class="btn btn-danger"><a href="{{path('book')}}">Réserver</a></button>
            </div>
            <div class="col">  
                {% if app.user %}
                    <a class="nav-link {% if current_menu is defined and current_menu == 'seconnecter' %}active{% endif %}" aria-current="page" href="{{path('logout')}}">Se déconnecter</a>
                {% else %}
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li><a class="nav-link text-white {% if current_menu is defined and current_menu == 'seconnecter' %}active{% endif %}" aria-current="page" href="{{path('login')}}">Se connecter</a>
                        </li>
                    </ul>
                {% endif %}
            </div>
          </div>
        </div>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <div class="container-fluid">
                <a class="navbar-brand" href="{{path('home')}}">Le Quai Antique</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle {% if current_menu is defined and current_menu == 'plats' %}active{% endif %}" aria-current="page" href="{{path('plats')}}" role="button" id="dropdownMenuLink" aria-haspopup="true" data-bs-toggle="dropdown" aria-expanded="false">Nos plats</a>
                                      <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" href="{{path('entrées')}}">Entrées</a></li>
                                        <li><a class="dropdown-item" href="{{path('spécialités')}}">Spécialités</a></li>
                                        <li><a class="dropdown-item" href="{{path('viandes')}}">Viandes</a></li>
                                        <li><a class="dropdown-item" href="{{path('poissons')}}">Poissons</a></li>
                                        <li><a class="dropdown-item" href="{{path('desserts')}}">Desserts</a></li>
                                        <li><a class="dropdown-item" href="{{path('boissons')}}">Boissons</a></li>
                                      </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link {% if current_menu is defined and current_menu == 'menus' %}active{% endif %}" aria-current="page" href="{{path('menus')}}">Nos menus</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link {% if current_menu is defined and current_menu == 's_inscrire' %}active{% endif %}" aria-current="page" href="{{path('sinscrire')}}">S'inscrire</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle {% if current_menu is defined and current_menu == 'admin' %}active{% endif %}" aria-current="page" href="#" role="button" id="dropdownMenuLink" aria-haspopup="true" data-bs-toggle="dropdown" aria-expanded="false">Admin</a>
                                      <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" href="{{path('plats_admin')}}">Enregistrer un plats</a></li>
                                        <li><a class="dropdown-item" href="{{path('horaires')}}">Gérer les horaires</a></li>
                                        <li><a class="dropdown-item" href="{{path('resa_admin')}}">Réservations à venir</a></li>
                                      </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

        {% block body %}{% endblock %}

        {% block javascript %}
        {{ encore_entry_script_tags('app') }}
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
        <script src="{{ asset('scripts/script.js') }}"></script>
        {% endblock %}
    </body>

</html>
