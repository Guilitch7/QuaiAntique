{%  extends 'base.html.twig' %}

{% block stylesheets %}
        <head>
                <link rel="stylesheet" href="{{ asset('styles/register-style.css') }}">
        </head>
{% endblock %}

{% block title "S'inscrire - Le quai antique" %}
{% block body %}
        <main>
                <div class="jumbotron text-center">
                        <img src="{{asset('uploads/Logo_paint.jpg')}}" class="img-fluid mt-3 logo" alt="Restaurant le Quai Antique, logo">
                        <h1>S'inscrire</h1>
                        <p>Afin de pouvoir réserver plus facilement à l'avenir, inscrivez-vous dès à présent</p>
                </div>
                <div class="container-lg mb-4">
                <div class="row d-flex justify-content-center">
                        <div class="col-sm-12 col-md-6 col-xl-4">
                                {{ form_start(register_form, {'attr': {'class': 'form-group-sm'}})}}
                                        <img src="{{asset('uploads/envelope-at.svg')}}" width="30" alt="icone" class="me-2 icon">{{ form_row(register_form.UserIdentifier)}}
                                        <img src="{{asset('uploads/key.svg')}}" width="30" alt="icone" class="me-2 icon">{{ form_row(register_form.password)}}
                                        <img src="{{asset('uploads/people-fill.svg')}}" width="30" alt="icone" class="me-2 icon">{{ form_row(register_form.coversNumber)}}
                                        <img src="{{asset('uploads/x-circle-fill.svg')}}" width="30" alt="icone" class="me-2 icon">{{ form_row(register_form.foodAllergies)}}
                                        <div class="text-center">
                                                <input type="submit" id="submit" value="Envoyer" class="btn btn-dark mb-3 align-center">
                                        </div>
                                {{ form_end(register_form)}}
                        </div>
                </div>
                </div>
        </main>
{% endblock %}
{% block javascript %}
        <script src="{{ asset('scripts/register-script.js') }}"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
{% endblock %}
