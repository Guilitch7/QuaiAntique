{%  extends 'base.html.twig' %}
{% block stylesheets %}
<head>
<link rel="stylesheet" href="{{ asset('styles/index-style.css') }}">
</head>
{% endblock %}
{% block body %}
<div class="jumbotron text-center mt-4">
        <img src="{{asset('uploads/Logo_paint.jpg')}}" alt="Restaurant le Quai Antique, logo">
        <p class="font-weight-bold">Votre restaurant Savoyard de référence</p>
</div>
        <main class="main">
          <div class="container">
            <div class="row imgMain">
              <img class="d-block w-100 rounded" src="{{asset('uploads/IMAG0086-63f9b3704c7c.jpg')}}" alt="Restaurant le Quai Antique">
            </div>
            <div class="row dishes mb-3">
              <h1 class="text-center">Retrouvez chez nous...</h1>
                <div class="col-4">
                {% for entree in entrees %}
                          <div class="description position-absolute">
                            <h2>{{ entree.DISHESname }}</h2>
                            <p>{{ entree.DISHESdescription }}</p>
                          </div>
                          <img class="d-block w-100 rounded" src="{{ entree.DISHESphoto }}" alt="{{ entree.DISHESname }}">           
                {% endfor %}
                </div>
                <div class="col-4">
                {% for plat in plats %}
                          <img class="d-block w-100 rounded" src="{{ plat.DISHESphoto }}" alt="{{ plat.DISHESname }}">
                          <h2>{{ plat.DISHESname }}</h2>
                          <p>{{ plat.DISHESdescription }}</p>
                {% endfor %}
                </div>
                <div class="col-4">
                {% for dessert in desserts %}
                          <img class="d-block w-100 rounded" src="{{ dessert.DISHESphoto }}" alt="{{ dessert.DISHESname }}">
                          <h2>{{ dessert.DISHESname }}</h2>
                          <p>{{ dessert.DISHESdescription }}</p>
                {% endfor %}
                </div>
            </div>
          </div>                  
      </main>
{% endblock %}
