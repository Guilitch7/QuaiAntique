{%  extends 'base.html.twig' %}

{% block stylesheets %}
<head>
<link rel="stylesheet" href="{{ asset('styles/galerie-style.css') }}">
</head>
{% endblock %}


{% block title %} "Nos plats - La galerie photo"{% endblock %}

{% block body %}
<body>
<main class="container">
    <div class="jumbotron text-center">
            <h1 class="text-center"><img src="{{asset('uploads/Logo_paint.jpg')}}" alt="Restaurant le Quai Antique, logo"> : Nos plats - la galerie photo</h1>
    </div>
    <div class="row">   
        {% for plat in plats %}
        {% if plat.DISHESphoto %}
            <div class="col-4">
                <div class="card mb-4 mt-2">
                    <img class="img-fluid" src="{{asset (plat.DISHESphoto)}}" alt="{{ plat.DISHESname }}">
                        <div class="description">
                            </br>
                            </br>
                            </br>
                            <h2>{{ plat.DISHESname }}</h2>
                            <p>{{ plat.DISHESdescription }}</p>
                        </div>
                </div>
              </div>  
        {% endif %}
        {% endfor %}
    </div>
    <div class="row">
        <div class="d-grid gap-2 d-md-flex justify-content-md-center">
            <a href="{{path('book')}}"><button type="button" class="btn btn-lg btn-warning align-center mb-3 border border-dark">RÃ©server</button></a>
        </div>
    </div>
        {% if is_granted('ROLE_ADMIN') %}
            <div>
                <a href="{{ path ('delete-dish', {'id' : plat.DISHESid}) }}" class="btn btn-danger">Supprimer</a>"
                <a href="{{ path ('edit-dish', {'id' : plat.DISHESid}) }}" class="btn btn-warning">Modifier</a>           
            </div>
        {% endif %}
        </div>
</main>
</body>
{% endblock %}

