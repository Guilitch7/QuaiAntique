{%  extends 'base.html.twig' %}

{% block title "Nos viandes - Le quai antique" %}
{% block body %}
<div class="jumbotron text-center">
        <h1>Nos Viandes</h1>
</div>
<main class="container">
    <div class="container">
        <div class="row">
            {% for viande in viandes %}
            <div class="col-4">
                <h2>{{ viande.DISHESname }}</h2>
                    <div>
                        <img class="img-fluid" src={{asset('uploads/' ~ viande.DISHESphoto)}} alt={{viande.DISHESname}}>
                        <h3>{{ viande.DISHESdescription }}</h3>
                        <h3>{{ viande.DISHESprice }}</h3>
                        {% if is_granted('ROLE_ADMIN') %}
                        <a href="{{ path ('delete-dish', {'id' : viande.DISHESid}) }}" class="btn btn-danger">Supprimer</a>
                        <a href="{{ path ('edit-dish', {'id' : viande.DISHESid}) }}" class="btn btn-warning">Modifier</a>
                        {% endif %}
                    </div>
            </div>
            {% endfor %}
        </div>
    </div>
</main>
{% endblock %}