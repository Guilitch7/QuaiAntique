{%  extends 'base.html.twig' %}

{% block title "Nos poissons - Le quai antique" %}
{% block body %}
<div class="jumbotron text-center">
        <h1>Nos Poissons</h1>
</div>
<main class="container">
    <div class="container">
        <div class="row">
            {% for poisson in poissons %}
            <div class="col-4 text-center">
                <h2>{{ poisson.DISHESname }}</h2>
                    <div>
                        <img class="img-fluid" src={{poisson.DISHESphoto}} alt={{poisson.DISHESname}}>
                        <h3>{{ poisson.DISHESdescription }}</h3>
                        <h3>{{ poisson.DISHESprice }}</h3>
                        {% if is_granted('ROLE_ADMIN') %}                 
                        <a href="{{ path ('delete-dish', {'id' : poisson.DISHESid}) }}" class="btn btn-danger">Supprimer</a>
                        <a href="{{ path ('edit-dish', {'id' : poisson.DISHESid}) }}" class="btn btn-warning">Modifier</a>
                        {% endif %}
                    </div>
            </div>
            {% endfor %}
        </div>
    </div>
</main>
{% endblock %}