{%  extends 'base.html.twig' %}

{% block stylesheet %}
<head>
<link rel="stylesheet" href="{{ asset('styles/plat-style.css') }}">
</head>
{% endblock %}

{% block title "Nos poissons - Le quai antique" %}
{% block body %}
<div class="jumbotron text-center">
        <h1>Nos Poissons</h1>
</div>
<main class="container">
    <div class="container">
        <div class="row">
            {% for poisson in poissons %}
            <div class="col-4 text-center">
                <h2>{{ poisson.DISHESname }}</h2>
                    <div>
                        <img class="img-fluid" src="{{asset(poisson.DISHESphoto)}}" alt="{{ poisson.DISHESname }}">
                        <p class="description">{{ poisson.DISHESdescription }}</p>
                        <p class="price">{{ poisson.DISHESprice }} â‚¬</p>
                        {% if is_granted('ROLE_ADMIN') %}                 
                        <a href="{{ path ('delete-dish', {'id' : poisson.DISHESid}) }}" class="btn btn-danger">Supprimer</a>
                        <a href="{{ path ('edit-dish', {'id' : poisson.DISHESid}) }}" class="btn btn-warning">Modifier</a>
                        {% endif %}
                    </div>
            </div>
            {% endfor %}
        </div>
    </div>
</main>
{% endblock %}