{%  extends 'base.html.twig' %}

{% block title "Nos boissons - Le quai antique" %}
{% block body %}
<div class="jumbotron text-center">
        <h1>Nos Boissons</h1>
</div>
<main class="container">
    <div class="container">
        <div class="row">
            {% for boisson in boissons %}
            <div class="col-4">
                <h2>{{ boisson.DISHESname }}</h2>
                    <div>
                        <img class="img-fluid" src={{boisson.DISHESphoto}} alt={{boisson.DISHESname}}>
                        <h3>{{ boisson.DISHESdescription }}</h3>
                        <h3>{{ boisson.DISHESprice }}</h3>
                        {% if is_granted('ROLE_ADMIN') %}
                        <a href="{{ path ('delete-dish', {'id' : boisson.DISHESid}) }}" class="btn btn-danger">Supprimer</a>
                        <a href="{{ path ('edit-dish', {'id' : boisson.DISHESid}) }}" class="btn btn-warning">Modifier</a>
                        {% endif %}
                    </div>
            </div>
            {% endfor %}
        </div>
    </div>
</main>
{% endblock %}