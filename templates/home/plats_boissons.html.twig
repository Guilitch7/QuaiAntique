{%  extends 'base.html.twig' %}

{% block stylesheet %}
<head>
<link rel="stylesheet" href="{{ asset('styles/plat-style.css') }}">
</head>
{% endblock %}

{% block title "Nos boissons - Le quai antique" %}
{% block body %}
<div class="jumbotron text-center">
        <h1>Nos Boissons</h1>
</div>
<main class="container">
    <div class="container">
        <div class="row">
            {% for boisson in boissons %}
            <div class="col-4">
                <h2>{{ boisson.DISHESname }}</h2>
                    <div>
                      {% if boisson.DISHESphoto %}
                        <img class="img-fluid" src="{{asset(boisson.DISHESphoto)}}" alt="{{ boisson.DISHESname }}">
                      {% endif %}
                        <p class="description">{{ boisson.DISHESdescription }}</p>
                        <p class="price">{{ boisson.DISHESprice }} â‚¬</p>
                        {% if is_granted('ROLE_ADMIN') %}
                        <a href="{{ path ('delete-dish', {'id' : boisson.DISHESid}) }}" class="btn btn-danger">Supprimer</a>
                        <a href="{{ path ('edit-dish', {'id' : boisson.DISHESid}) }}" class="btn btn-warning">Modifier</a>
                        {% endif %}
                    </div>
            </div>
            {% endfor %}
        </div>
    </div>
</main>
{% endblock %}
{% block javascript %}
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
        <script src="{{ asset('scripts/script.js') }}"></script>
{% endblock %}