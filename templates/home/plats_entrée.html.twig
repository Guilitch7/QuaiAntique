{%  extends 'base.html.twig' %}

{% block title "Nos entrées - Le quai antique" %}
{% block body %}
<div class="jumbotron text-center">
        <h1>Nos Entrées</h1>
</div>
<main class="container">
    <div class="container">
        <div class="row">
            {% for entree in entrees %}
            <div class="col-4">
                <h2>{{ entree.DISHESname }}</h2>
                    <div>
                        <img class="img-fluid" src={{entree.DISHESphoto}} alt={{entree.DISHESname}}>
                        <h3>{{ entree.DISHESdescription }}</h3>
                        <h3>{{ entree.DISHESprice }}</h3>
                        {% if is_granted('ROLE_ADMIN') %}
                        <a href="{{ path ('delete-dish', {'id' : entree.DISHESid}) }}" class="btn btn-danger">Supprimer</a>
                        <a href="{{ path ('edit-dish', {'id' : entree.DISHESid}) }}" class="btn btn-warning">Modifier</a>
                        {% endif %}
                    </div>
            </div>
            {% endfor %}
        </div>
    </div>
</main>
{% endblock %}