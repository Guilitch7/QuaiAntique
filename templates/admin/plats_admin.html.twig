{%  extends 'base.html.twig' %}

{% block title "Enregistrer un plat - Le quai antique" %}
{% block body %}
<main class="container">
    <div class="row d-flex justify-content-center">
        <div class="col-sm-12 col-xl-6">
                {% if is_granted("ROLE_ADMIN") %}
                        <div class="jumbotron text-center">
                                <h1 class="mt-3">Enregistrer / modifier un plat</h1>
                        </div>
                        <main class="container">
                            <div>
                                {{ form_start(dishes_form)}}
                                        {{ form_row(dishes_form.DISHESname)}}
                                        {{ form_row(dishes_form.DISHEScategory)}}
                                        {{ form_row(dishes_form.DISHEStype)}}
                                        {{ form_row(dishes_form.menu)}}
                                        {{ form_row(dishes_form.DISHESprice)}}
                                        {{ form_row(dishes_form.DISHESdescription)}}
                                        {{ form_row(dishes_form.DISHESphoto)}}
 
                                        <input type="submit" class="mb-3" value="Envoyer">
                                {{ form_end(dishes_form)}}
                            </div>
                        </main>
                {% else %}
                        <h1 class="text-center">Vous n'êtes pas habilité à accéder à cette partie du site</h1>
                {% endif %}
        </div>
    </div>
</main>
{% block javascript %}
        <script src="{{ asset('scripts/deletePic.js') }}"></script>
{% endblock %}
{% endblock %}