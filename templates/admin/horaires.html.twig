{%  extends 'baseAdmin.html.twig' %}
{% block title %}Gestion des horaires!{% endblock %}

{% block body %}
<div class="container">
  <h1>Gestion des horaires du restaurant</h1>
    <div class="row">
        {% for horaire in horaires %}
        <div class="col-3">
          <h2>{{ horaire.OPENINGDAYSday }}</h2>
                <div>
                <p>Midi : {% if horaire.OpenLunch and horaire.closelunch %}<span id="openLunch">{{ horaire.OpenLunch|date('H:i')}}</span> - <span id="closeLunch">{{ horaire.closelunch|date('H:i')}}</span> {% else %} Fermé le midi {% endif %}</p>
                <p>Soir : {% if horaire.OpenDinner and horaire.closedinner %}<span id="openDinner">{{ horaire.OpenDinner|date('H:i')}}</span> - <span id="closeDinner">{{ horaire.closedinner|date('H:i')}}</span> {% else %} Fermé le soir {% endif %}</p>
                <p>Couverts disponibles : {{ horaire.coversPossible }}</p>
                {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path ('edit-horaires', {'id' : horaire.id}) }}" class="btn btn-warning">Modifier</a>
                {% endif %}
                </div>
        </div>
        {% endfor %}
    </div>
</div>
{% endblock %}



