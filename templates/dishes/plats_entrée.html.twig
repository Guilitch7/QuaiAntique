{%  extends 'base.html.twig' %}

{% block stylesheets %}
    <head>
        <link rel="stylesheet" href="{{ asset('styles/galerie-style.css') }}">
    </head>
{% endblock %}

{% block title %} "Nos entrées - La galerie photo"{% endblock %}

{% block body %}
<body>
  <main class="container">
    <div class="jumbotron text-center">
            <h1 class="text-center"><img src="{{asset('uploads/Logo_paint.jpg')}}" alt="Restaurant le Quai Antique, logo"> : Nos Entrées - la galerie photo</h1>
    </div>
    <div class="row mt-5">   
        {% for entree in entrees %}
        {% if entree.DISHESphoto %}
            <div class="col-sm-12 col-md-6 col-lg-4">
                <div class="card mb-4 mt-2">
                    <img class="img-fluid" src="{{ asset('uploads/' ~ entree.DISHESphoto)}}" alt="{{ entree.DISHESname }}">
                        <div class="description">
                            </br>
                            </br>
                            </br>
                            <h2>{{ entree.DISHESname }}</h2>
                            <p>{{ entree.DISHESdescription }}</p>
                            <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                                <a href="{{path('book')}}"><button type="button" class="btn btn-lg btn-warning align-center mb-3 border border-dark">Réserver</button></a>
                            </div>
                        </div>
                </div>
            </div>
        {% endif %}
        {% endfor %}
    </div> 
  </main>
</body>
{% endblock %}