{%  extends 'base.html.twig' %}

{% block stylesheets %}
    <head>
        <link rel="stylesheet" href="{{ asset('styles/galerie-style.css') }}">
    </head>
{% endblock %}


{% block title %} "Nos viandes - La galerie photo"{% endblock %}

{% block body %}
    <main class="container">
        <div class="jumbotron text-center">
                <h1 class="text-center"><img src="{{asset('uploads/Logo_paint.jpg')}}" class="img-fluid" alt="Restaurant le Quai Antique, logo"> : Nos viandes - la galerie photo</h1>
        </div>
        <div class="row mt-5">   
            {% for viande in viandes %}
            {% if viande.DISHESphoto %}
                <div class="col-sm-12 col-md-6 col-lg-4">
                    <div class="card mb-4 mt-2">
                        <img class="img-fluid rounded img-uni" src="{{ asset('uploads/' ~ viande.DISHESphoto)}}" alt="{{ viande.DISHESname }}">
                            <div class="description">
                                </br>
                                </br>
                                </br>
                                <h2>{{ viande.DISHESname }}</h2>
                                <p>{{ viande.DISHESdescription }}</p>
                                <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                                    <a href="{{path('book')}}"><button type="button" class="btn btn-lg btn-warning align-center mb-3 border border-dark">RÃ©server</button></a>
                                </div>
                            </div>
                    </div>
                    {% if is_granted("ROLE_ADMIN") %}
                        <a href="/admin-photos-delete-{{ viande.DISHESphoto }}" class="btn btn-danger">Supprimer</a>
                    {% endif %}
                </div>  
            {% endif %}
            {% endfor %}
        </div>
    </main>
{% endblock %}