{% extends 'base.html.twig' %}

{% block stylesheets %}
<head>
<link rel="stylesheet" href="{{ asset('styles/menu-style.css') }}">
<link href="https://fonts.cdnfonts.com/css/youth-action" rel="stylesheet">
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Style+Script&display=swap" rel="stylesheet">
<link href="https://fonts.cdnfonts.com/css/franklin-gothic-demi-2" rel="stylesheet">
</head>
{% endblock %}

{% block title %}{% endblock %}

{% block body %}
<main class="main mb-3">
    <h1 class="text-center"><img src="{{asset('uploads/Logo_paint.jpg')}}" alt="Restaurant le Quai Antique, logo"> : Nos menus</h1>
        <div class="container">
          <div class="row">   
            <div class="col card me-5">
              <div class="card-body">
              {% for men1 in menu1 %}
                <h2 class="text-center card-title mb-2">{{ men1.name }}</h2>
              {% endfor %}
                <ul class="details">
                    <a href="{{path('entrées')}}" class="card-link mt-2"><li class="mainLi">Entrées</li></a>
                        <ul>
                        {% for dishe1c1 in dishes1c1 %}
                            <li class="text-center">{{ dishe1c1.DISHESname }}</li>
                        {% endfor %}
                        </ul>
                    <a href="{{path('plats')}}"><li class="mainLi mt-2">Plats</li></a>
                        <ul>
                        {% for dishe1c2 in dishes1c2 %}
                            <li class="text-center">{{ dishe1c2.DISHESname }}</li>
                        {% endfor %}
                        </ul>
                    <a href="{{path('desserts')}}"><li class="mainLi mt-2">Desserts</li></a>
                        <ul>
                        {% for dishe1c3 in dishes1c3 %}
                            <li class="text-center">{{ dishe1c3.DISHESname }}</li>
                        {% endfor %}
                        </ul>
                </ul>
                <div class="card-footer">
                    <h3 class="text-center">Les formules</h3>
                    {% for formul1 in formule1 %}
                <ul>
                    <li>{{ formul1.name }} :<span class="price"> {{ formul1.price }} €</span></li>
                </ul>
                    {% endfor %}
                </div>
              </div>
            </div>
            <div class="col card me-5">
              <div class="card-body">
                {% for men2 in menu2 %}
                <h2 class="text-center card-title mb-2">{{ men2.name }}</h2>
                {% endfor %}
                <ul class="details">
                    <a href="{{path('entrées')}}" class="card-link mt-2"><li class="mainLi">Entrées</li></a>
                        <ul>
                            {% for dishe2c1 in dishes2c1 %}
                            <li class="text-center">{{ dishe2c1.DISHESname }}</li>
                            {% endfor %}
                        </ul>
                    <a href="{{path('plats')}}"><li class="mainLi mt-2">Plats</li></a>
                        <ul>
                            {% for dishe2c2 in dishes2c2 %}
                            <li class="text-center">{{ dishe2c2.DISHESname }}</li>
                            {% endfor %}
                        </ul>
                    <a href="{{path('desserts')}}"><li class="mainLi mt-2">Desserts</li></a>
                        <ul>
                            {% for dishe2c3 in dishes2c3 %}
                            <li class="text-center">{{ dishe2c3.DISHESname }}</li>
                            {% endfor %}
                        </ul>
                </ul>
                <div class="card-footer">
                    <h3 class="text-center">Les formules</h3>
                    {% for formul2 in formule2 %}
                <ul>
                    <li>{{ formul2.name }}:<span class="price"> {{ formul2.price }} €</span></li>
                </ul>
                    {% endfor %}
                </div>
              </div>
            </div>
            <div class="col card">
              <div class="card-body">
                <h2 class="text-center card-title mb-2">Menu Intégral</h2>
                    <ul class="details">
                        <a href="{{path('entrées')}}" class="card-link mt-2"><li class="mainLi">Entrées</li></a>
                            <p class="text-center">Au choix parmi les entrées de la carte</p>
                        <a href="{{path('plats')}}"><li class="mainLi mt-2">Plats</li></a>
                            <p class="text-center">Au choix parmi les plats de la carte</p>
                        <a href="{{path('desserts')}}"><li class="mainLi mt-2">Desserts</li></a>
                            <p class="text-center">Au choix parmi les desserts de la carte</p>
                    </ul>
                    <div class="card-footer">
                        <h3 class="text-center">Les formules</h3>
                        {% for formul3 in formule3 %}
                    <ul>
                        <li>{{ formul3.name }}:<span class="price"> {{ formul3.price }} €</span></li>
                    </ul>
                        {% endfor %}
                    </div>
              </div>
            </div>
        </div>
    </div>
</main>
{% endblock %}
