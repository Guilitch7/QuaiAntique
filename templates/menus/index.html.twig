{% extends 'base.html.twig' %}

{% block title %}Nos menus{% endblock %}

{% block body %}
<main class="container">
    <div class="container">
        <div class="row">
            {% for menu in menus %}
            <div class="col">
                <h2>{{ menu.MenuName }}</h2>
                    <div>
                        <h3>{{ menu.MenuCategory1 }}</h3>
                        <h3>{{ menu.MenuCategory2 }}</h3>
                        <h3>{{ menu.MenuCategory3 }}</h3>
                    </div>
                    <div>
                        {% for Formula in menu.MenusFormulas %}
                        <p>{{ Formula }}</p>
                        {% endfor %}
                    </div>
            </div>
            {% endfor %}
           {# <div>
            {% for formula in formulas %}
                        <p>{{ formula }}</p>
            {% endfor %}
            </div> #}
        </div>
    </div>
</main>
{% endblock %}
