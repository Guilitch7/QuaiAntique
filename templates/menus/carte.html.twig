{% extends 'base.html.twig' %}

{% block stylesheets %}
    <head>
        <link rel="stylesheet" href="{{ asset('styles/carte-style.css') }}">
        <link href="https://fonts.cdnfonts.com/css/youth-action" rel="stylesheet">
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Style+Script&display=swap" rel="stylesheet">
        <link href="https://fonts.cdnfonts.com/css/franklin-gothic-demi-2" rel="stylesheet">         
    </head>
{% endblock %}

{% block title %}

{% endblock %}

{% block body %}
<main>
  <h1 class="text-center"><img src="{{asset('uploads/Logo_paint.jpg')}}" alt="Restaurant le Quai Antique, logo"> : La carte</h1>
    <div class="container">
            <h2>Les entrées</h2>
            {% for dishe in dishes %}
                {% if dishe.DISHEScategory == 'Entrée' %}
                    <article><h3 class="ms-5">{{ dishe.DISHESname }} - <span class="price">{{ dishe.DISHESprice }}€</span></h3><p class="ms-5">{{ dishe.DISHESdescription }}</p></article>
                {% endif %}
            {% endfor %}
            <h2>Les plats</h2>
            {% for dishe in dishes %}
                {% if dishe.DISHEScategory == 'Plat' %} 
                    <article><h3 class="ms-5">{{ dishe.DISHESname }} - <span class="price">{{ dishe.DISHESprice }}€</span></h3><p class="ms-5">{{ dishe.DISHESdescription }}</p></article>
                {% endif %}
            {% endfor %}
            <h2>Les desserts</h2>
            {% for dishe in dishes %}
                {% if dishe.DISHEScategory == 'Dessert' %}
                    <article><h3 class="ms-5">{{ dishe.DISHESname }} - <span class="price">{{ dishe.DISHESprice }}€</span></h3><p class="ms-5">{{ dishe.DISHESdescription }}</p></article>
                {% endif %}
            {% endfor %}
            <h2>Les boissons</h2>
                <h3>Apéritifs</h3>
                    {% for dishe in dishes %}                    
                    {% if dishe.DISHEScategory == 'Boissons' %}
                        {% if dishe.DISHEStype == 'Apéritifs' %}
                        <article><h3 class="ms-5">{{ dishe.DISHESname }} - <span class="price">{{ dishe.DISHESprice }}€</span></h3><p class="ms-5">{{ dishe.DISHESdescription }}</p></article>
                        {% endif %}
                    {% endif %}
                    {% endfor %}       
                <h3>Bières bouteille</h3>
                    {% for dishe in dishes %}                    
                    {% if dishe.DISHEScategory == 'Boissons' %}
                        {% if dishe.DISHEStype == 'Bières bouteille' %}
                        <article><h3 class="ms-5">{{ dishe.DISHESname }} - <span class="price">{{ dishe.DISHESprice }}€</span></h3><p class="ms-5">{{ dishe.DISHESdescription }}</p></article>
                        {% endif %}
                    {% endif %}
                    {% endfor %}
                <h3>Vins au verre</h3>
                    {% for dishe in dishes %}                    
                    {% if dishe.DISHEScategory == 'Boissons' %}
                        {% if dishe.DISHEStype == 'Vins au verre' %}
                        <article><h3 class="ms-5">{{ dishe.DISHESname }} - <span class="price">{{ dishe.DISHESprice }}€</span></h3><p class="ms-5">{{ dishe.DISHESdescription }}</p></article>
                        {% endif %}
                    {% endif %}
                    {% endfor %}     
                <h3>Digestif</h3>
                    {% for dishe in dishes %}                    
                    {% if dishe.DISHEScategory == 'Boissons' %}
                        {% if dishe.DISHEStype == 'Digestif' %}
                        <article><h3 class="ms-5">{{ dishe.DISHESname }} - <span class="price">{{ dishe.DISHESprice }}€</span></h3><p class="ms-5">{{ dishe.DISHESdescription }}</p></article>
                        {% endif %}
                    {% endif %}
                    {% endfor %}    
                <h3>Sans alcool</h3>
                    {% for dishe in dishes %}                    
                    {% if dishe.DISHEScategory == 'Boissons' %}
                        {% if dishe.DISHEStype == 'Sans alcool' %}
                        <article><h3 class="ms-5">{{ dishe.DISHESname }} - <span class="price">{{ dishe.DISHESprice }}€</span></h3><p class="ms-5">{{ dishe.DISHESdescription }}</p></article>
                        {% endif %}
                    {% endif %}
                    {% endfor %}    
    </div>
</main>
{% endblock %}